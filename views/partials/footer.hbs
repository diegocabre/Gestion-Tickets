<footer class="footer">
  <div class="container">
    <div class="footer-left">
      <!-- Logo e información de contacto -->
      <div class="footer-logo">
        <img src="/imgs/logo.png" alt="Logo" class="footer-logo-img" />
      </div>
      <div class="footer-info">
        <p>Dirección: Calle Ficticia 123, Ciudad, País</p>
        <div class="footer-socials">
          <a href="https://facebook.com" target="_blank" class="social-icon">
            <i class="fab fa-facebook-f"></i>
          </a>
          <a href="https://twitter.com" target="_blank" class="social-icon">
            <i class="fab fa-twitter"></i>
          </a>
          <a href="https://instagram.com" target="_blank" class="social-icon">
            <i class="fab fa-instagram"></i>
          </a>
          <!-- Agrega más íconos si es necesario -->
        </div>
      </div>
    </div>
    <div class="footer-right">
      {{#if user}}
        <p>Bienvenido, {{user.nombre}}</p>
      {{else}}
        <nav class="footer-nav">
          <a href="/auth/login">Iniciar sesión</a>
          <a href="/auth/register">Registrarse</a>
        </nav>
      {{/if}}
    </div>
  </div>
</footer>

<!-- Agrega los enlaces a Font Awesome para los íconos -->
<script
  src="https://kit.fontawesome.com/13f9e47b19.js"
  crossorigin="anonymous"
></script>